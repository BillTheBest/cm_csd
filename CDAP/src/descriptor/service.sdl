      ],
      "logging": {
        "dir": "/var/log/cdap",
        "filename": "master.log",
        "isModifiable": false,
        "loggingType": "other"
      },
      "startRunner": {
        "program": "scripts/cdap-control.sh",
        "args": [ "master" ],
        "environmentVariables": {
          "KAFKA_PROPERTIES" : "kafka.properties",
          "OPTS": "${cdap_java_opts}",
          "MASTER_JAVA_HEAPMAX": "-Xmx${master_java_heapmax}",
          "LOGBACK_LOG_DIR": "/var/log/cdap",
          "LOGBACK_LOG_FILE": "master.log",
