        },
        {
          "name": "kafka_log_max_size",
          "label": "CDAP Kafka Service Max Log Size",
          "description": "The maximum size, in megabytes, per log file for CDAP Kafka Service logs (via logback)",
          "required": true,
          "type": "long",
          "unit": "megabytes",
          "default": 200
        },
        {
          "name": "kafka_log_max_backups",
          "label": "CDAP Kafka Service Max Log File Backups",
          "description": "The maximum number of rolled log files to keep for CDAP Kafka Service logs (via logback)",
          "required": true,
          "type": "long",
          "default": 10
        }
      ],
      "configWriter": {
        "generators": [
          {
            "filename": "cdap-site.xml",
            "configFormat": "hadoop_xml",
            "excludedParams": [ "cdap_java_opts", "kafka_java_heapmax", "kafka_log_threshold", "kafka_log_max_size", "kafka_log_max_backups" ],
            "additionalConfigs": [
              {
                "key": "zookeeper.quorum",
                "value": "{{ZK_QUORUM}}/${root_namespace}"
              },
              {
                "key": "kafka.seed.brokers",
                "value": "{{KAFKA_SEED_BROKERS}}"
              },
              {
                "key": "kafka.log.dir",
                "value": "{{LOCAL_DIR}}/kafka-logs"
              }
            ]
          }
        ],
        "peerConfigGenerators": [
          {
            "filename": "kafka.properties",
            "params": [ "kafka_bind_port" ]
          }
        ],
        "auxConfigGenerators": [
          {
            "filename": "logback.xml",
            "sourceFilename": "aux/logback.xml"
          }
        ]
      },
      "logging": {
        "dir": "/var/log/cdap",
        "filename": "kafka.log",
        "isModifiable": false,
        "loggingType": "other"
      },
      "startRunner": {
        "program": "scripts/cdap-control.sh",
        "args": [ "kafka-server" ],
        "environmentVariables": {
          "KAFKA_PROPERTIES" : "kafka.properties",
          "OPTS": "${cdap_java_opts}",
          "KAFKA_JAVA_HEAPMAX": "-Xmx${kafka_java_heapmax}",
          "LOGBACK_LOG_DIR": "/var/log/cdap",
          "LOGBACK_LOG_FILE": "kafka.log",
          "LOGBACK_THRESHOLD": "${kafka_log_threshold}",
          "LOGBACK_MAX_SIZE": "${kafka_log_max_size}MB",
          "LOGBACK_MAX_BACKUPS": "${kafka_log_max_backups}"
        }
      }
    },
    {
      "name": "CDAP_MASTER",
      "label": "CDAP Master Service",
      "pluralLabel": "CDAP Master Services",
      "parameters": [
        {
          "name" : "master_java_heapmax",
          "label" : "Master Max Heapsize",
          "description" : "Maximum size for the Java Process heap.  Passed to Java -Xmx.  Measured in bytes.",
          "required" : "true",
          "type" : "memory",
          "unit" : "bytes",
          "min" : 2147483648,
          "default" : 4294967296,
          "scaleFactor" : 1.3
        },
        {
          "name": "master_log_threshold",
          "label": "CDAP Master Service Logging Threshold",
          "description": "The minimum log level for CDAP Master Service logs (via logback)",
          "required": true,
          "default": "INFO",
          "type": "string_enum",
          "validValues": [
            "TRACE",
            "DEBUG",
            "INFO",
            "WARN",
            "ERROR",
            "FATAL"
          ]
        },
        {
          "name": "master_log_max_size",
          "label": "CDAP Master Service Max Log Size",
          "description": "The maximum size, in megabytes, per log file for CDAP Master Service logs (via logback)",
          "required": true,
          "type": "long",
          "unit": "megabytes",
          "default": 200
        },
        {
          "name": "master_log_max_backups",
          "label": "CDAP Master Service Max Log File Backups",
          "description": "The maximum number of rolled log files to keep for CDAP Master Service logs (via logback)",
          "required": true,
          "type": "long",
          "default": 10
        }
      ],
      "configWriter": {
        "generators": [
          {
            "filename": "cdap-site.xml",
            "configFormat": "hadoop_xml",
            "excludedParams": [ "cdap_java_opts", "master_java_heapmax", "master_log_threshold", "master_log_max_size", "master_log_max_backups" ],
            "additionalConfigs": [
              {
                "key": "zookeeper.quorum",
                "value": "{{ZK_QUORUM}}/${root_namespace}"
              },
              {
                "key": "kafka.seed.brokers",
                "value": "{{KAFKA_SEED_BROKERS}}"
              },
              {
                "key": "kafka.log.dir",
                "value": "{{LOCAL_DIR}}/kafka-logs"
              }
            ]
          }
        ],
        "peerConfigGenerators": [
          {
            "filename": "kafka.properties",
            "params": [ "kafka_bind_port" ]
          }
        ],
        "auxConfigGenerators": [
          {
            "filename": "logback.xml",
            "sourceFilename": "aux/logback.xml"
          }
        ]
      },
      "kerberosPrincipals" : [
        {
          "name" : "cdap_principal",
          "primary" : "cdap",
          "instance" : "${host}"
